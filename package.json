{
    "name": "hugo-atlantic-theme",
    "version": "1.0.0",
    "description": "A Hugo Tailwind starter blog",
    "author": "rob@zerostatic.io",
    "license": "MIT",
    "scripts": {
        "start": "concurrently \"npm run watch:tailwind\" \"npm run watch:hugo\"",
        "start:example": "concurrently \"npm run watch:tailwind\" \"npm run watch:hugo-example-site\"",
        "build": "hugo --minify",
        "build:example": "cd exampleSite && hugo --gc --themesDir ../..",
        "watch:tailwind": "tailwindcss -i ./assets/css/style.css -o ./assets/css/dist/style.css --watch",
        "watch:hugo": "hugo server",
        "watch:hugo-example-site": "hugo server --source=exampleSite --themesDir='../../'"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.0",
        "autoprefixer": "^10.4.2",
        "concurrently": "^7.0.0",
        "postcss": "^8.4.5",
        "postcss-cli": "^9.1.0",
        "prettier": "^2.5.1",
        "prettier-plugin-go-template": "0.0.11",
        "tailwindcss": "^3.0.15"
    }
}
